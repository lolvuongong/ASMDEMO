{% extends 'base.html.twig' %}

{% block title %}List of Courses!
{% endblock %}

{% block body %}
	<div class="container col-md-8 text-center mt-3">
		<table class="table table-light">
			<tr>
				<th colspan="3">
					<h1 class="text text-primary">Course List</h1>
				</th>
				<th><a href="{{ path('course_add') }}" class="btn btn-info mt-2">Add course</a></th>
			</tr>
			<tr>
				<th class="text text-success">Course ID</th>
				<th class="text text-success">Course Name</th>
			</tr>
			{% for course in courses %}
				<tr>
					<td>{{ course.id }}</td>
					<td>{{ course.name }}</td>
				    <td>
						<a class="text-decoration-none" href="{{ path('course_detail', {'id' : course.id }) }}">
							<img src="{{ asset('buttons/detail.png') }}" width="40" height="40">
						</a>
						<a class="text-decoration-none" href="{{ path('course_edit', {'id' : course.id }) }}">
							<img src="{{ asset('buttons/edit.png') }}" width="40" height="40">
						</a>
						<a class="text-decoration-none" href="{{ path('course_delete', {'id' : course.id }) }}" onclick="return confirm('Are you sure to delete this course?');">
							<img src="{{ asset('buttons/delete.png') }}" width="40" height="40">
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
